<div class="container">
  <div class="card card-group-new kenburns-top w-25 mx-auto m-5">
    <h2 class='text-center text-white my-5'>Log in</h2>
  </div>
  <div class="row m-5">
    <div class='col-12 text-center'>
      <div class="form-group bg-light border border-warning p-3 mx-auto m-4 w-50" >
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs m-5">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: false,
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'btn btn-info my-2' %>
            <br>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-muted' %>
            <br>
            <br>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-light' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>

