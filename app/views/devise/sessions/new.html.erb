<div class="banner3" style="background-image: linear-gradient(rgba(0,0,0,0.8),rgba(0,0,0,0.8)), url(https://img.freepik.com/free-photo/playful-african-man-joking-with-beautiful-european-man-while-holding-money_8353-10346.jpg?size=626&ext=jpg);">
  <div class="container text-center">
    <h1 style="font-family: 'TT Commons', sans-serif; font-size: 130px, text-shadow: 10 10 10; "><strong class="text-white">We</strong><strong class="text-info">BET</strong></h1>
    <p>It's better together</p>
    <div class="form-group bg-light border border-warning p-3 mx-auto m-4 w-50" >
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div id="login-form" class="form-inputs m-5">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: false,
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <a>  <%= f.button :submit, "Log in", class: 'btn badge-pill btn-lg btn-info my-2' %></a>
          <br>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-muted' %>
          <br>
          <br>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-light' %>
        </div>
      <% end %>
    </div>
  </div>
</div>










