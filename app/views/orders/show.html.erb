<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><img src="https://jornaleconomico.sapo.pt/wp-content/uploads/2020/01/novo-boletim-EUROMILHOES.png" alt="bet"></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>BET</strong> <%= @order.bet.numbers.join('-') %><%= @order.bet.stars.join('-') %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Drawing date: <strong>Friday(TODO PLACEDHOLDER)</strong></p>
    </div>
  </div>
</div>
