    <%= simple_form_for profile do |f| %>
      <%= f.input :username, required: true, label: 'Username', placeholder: 'Choose a username', error: 'Username is mandatory, please specify one' %>
      <%= f.input :first_name, required: true, label: 'Name', placeholder: 'Your name?', error: 'Name is mandatory, please specify one' %>
      <%= f.input :last_name, required: true, label: 'Surname', placeholder: 'Your surname?', error: 'Surname is mandatory, please specify one' %>
      <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                                  end_year: Date.today.year - 18, discard_day: false,
                                  order: [:day, :month, :year] %>
      <%= f.input :bio, as: :text %>
      <%= f.input :nif, as: :integer, label: 'NIF', placeholder: 'Optional', input_html: { maxlength: 9 }%>

      <%= f.button :submit, "Custom Button Text", class: "btn btn-primary" %>
    <% end %>
