<div class="navbar-wagon <%= yield(:navbar_class) %>">
  <!-- NAVBAR CONTENT -->

<nav class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to dashboard_path, class: "navbar-brand" do %>
    <%= image_tag "https://www.gamblerspick.com/uploads/monthly_2018_10/wb_logo_500px.png.8475c35aa4633bb9785b4a6c36fc13a0.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Groups", groups_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Messages", conversations_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <% if  user_signed_in? && current_user.profile? && current_user.profile.photo.attached? %>
        <%= image_tag current_user.profile.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
        <img src="https://icons.iconarchive.com/icons/custom-icon-design/flatastic-4/256/User-orange-icon.png" alt="placeholder" class='avatar dropdown-toggle' >
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Log Out", destroy_user_session_path, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
