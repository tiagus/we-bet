<div class="container">
  <div class="card card-group-new m-5">
    <h2 class='text-center text-white my-5'> <strong>Create a Group</strong></h2>
    <div class="row">
      <div class='col-12 text-center'>
        <div class="form-group bg-light border border-warning rounded p-5 my-5" >
          <%= simple_form_for @group do |f| %>
            <%= f.input :name, label: false, placeholder: 'Your group\'s name' %>
            <%= f.input :description, label: false, placeholder: 'A catchy, relevant description' %>
            <%= f.input :photo, as: :file %>
            <%= f.input :public %>
            <%= f.submit "Create", class: "btn btn-lg btn-info m-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


