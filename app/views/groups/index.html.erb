<div class="text-center my-5">
  <h1><strong>Browse Groups</strong></h1>
  <%= link_to 'Create', new_group_path, class: 'btn btn-lg btn-dark my-5' %>
</div>
<div class="card-group">
<% @groups.each do |group| %>
  <div class="card">
    <% if group.photo.attached? %>
    <%= cl_image_tag group.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face %>
    <% else %>
    <img class='rounded mx-auto d-block' src="https://pt.seaicons.com/wp-content/uploads/2015/11/App-Group-cobfig-icon.png" alt="placeholder-photo" style='width:100px'>
    <% end %>
    <div class="card-body">
      <%= link_to group.name, group_path(group), class: 'card-title' %>
      <p class="card-text "><%= group.description %></p>
      <p class="text-muted">Ongoing Bets: <%= group.bets.where(group: group).count %></p>
        <% if group.user == current_user %>
        <%= link_to 'Admin', group_path(group), class: 'btn btn-outline-secondary mx-auto d-block' %>
        <% elsif current_user.groups.include?(group) %>
        <%= link_to 'Joined', group_path(group), class: 'btn btn-outline-primary mx-auto d-block' %>
        <% else %>
        <%= link_to 'Join', group_path(group), class: 'btn btn-primary mx-auto d-block' %>
        <% end %>
        <p><small class="text-muted"><%= group.privacy %></small></p>
    </div>
  </div>
  <% end %>
</div>




