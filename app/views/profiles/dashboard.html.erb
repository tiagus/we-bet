<!-- main content-->
<main class="container-fluid bg-dark pl-5 pr-5 pt-4 main-background">

<!-- 1st section -->
  <section class="container-fluid">
    <div class="row">

<!-- left section -->
      <div class="col pt-3 pr-5">

<!-- 1st row = dashboard title -->
        <div class="row text-white pb-3 ">
          <div class="col">
            <h2>DASHBOARD</h2>
          </div>
        </div>

<!-- 2nd row = banner countdown to next drow -->
        <div class="row text-white pb-5 ">
          <div class="col text-center bg-secondary text-white myradius">
            <h3><%= @draws.last.draw_date.strftime("%A") %></h3>
            <h2>EUROMILLIONS</h2>
            <h3>43.300.000€</h3>
            <h2> <i class="fas fa-clock">02h 53m 35s</i></h2>
          </div>
        </div>

<!-- 3rd row = 3 cards with stats -->
        <div class="row text-white pb-3">
          <!-- card left -->
          <div class="col bg-warning mb-5 mr-4 p-4 myradius">
            <div class="row">
              <!-- card left col -->
              <div class="col-1 text-center ">
                <i class="fas fa-trophy large-icon"></i>
              </div>
              <!-- card right col -->
              <div class="col text-center">
                <h3>Won so far</h3>
                <h5>300,00</h5>
              </div>
            </div>
          </div>
          <!-- card center -->
          <div class="col bg-secondary mb-5 mr-4 p-4 myradius">
            <div class="row">
              <!-- card left col -->
              <div class="col-1 text-center">
                <i class="fas fa-hand-holding-usd large-icon"></i>
              </div>
              <!-- card right col -->
              <div class="col text-center">
                <h3>Spent so far</h3>
                <h5>300,00</h5>
              </div>
            </div>
          </div>
          <!-- card right -->
          <div class="col bg-secondary mb-5 p-4 myradius">
            <div class="row">
              <!-- card left col -->
              <div class="col-1 text-center">
                <i class="fas fa-piggy-bank large-icon"></i>
              </div>
              <!-- card right col -->
              <div class="col text-center ">
                <h3>Account balance</h3>
                <h5>300,00</h5>
              </div>
            </div>
          </div>
        </div>

<!-- 4th row = my groups title -->
        <div class="row text-white pb-3">
          <div class="col">
            <h3><strong>My Groups</strong></h3>
          </div>
        </div>

<!-- 5ft row = group list -->
          <div class="pb-3">
            <% @groups.take(5).each do |group| %>
              <div class="row bg-secondary text-white mb-3 pt-2 pb-2 mt-2 pt-2 myradius">
                <!-- 1st column = logo -->
                <div class="col-1 text-center">
                  <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png", class: "avatar", alt: "avatar" %>
                </div>
                <!-- 2nd column = name and more -->
                <div class="col-4">
                  <h2><%= group.name %></h2>
                  <p><%= group.bets.count %> members have bets so far!</p>
                  <!-- group members avatars -->
                  <ul class="list-unstyled list-inline">
                    <% 4.times do %>
                    <li class="list-inline-item">
                      <% if group.users.where.not(id: current_user.id).sample.profile.photo.attached? %>
                      <%= cl_image_tag group.users.where.not(id: current_user.id).sample.profile.photo.key, width: 150, height: 150, radius: 'max' %>
                      <% else %>
                      <img src="https://icons.iconarchive.com/icons/custom-icon-design/flatastic-4/256/User-orange-icon.png" alt="placeholder" class='avatar'>
                      <% end %>
                    </li>
                    <% end %>
                  </ul>
                </div>
                <!-- 3nd column = form -->
                <%= render 'shared/betform', group: group %>
              </div>
            <% end %>
          </div>

      </div>
      <!-- END left section -->

<!-- right section -->
      <div class="col-3  pt-5">

<!-- 1st row = profile info -->
        <div class="container text-white bg-warning p-2 mt-4 mb-5 myradius" >
          <div class="row card-body text-center ">
            <div class="col">
              <h2><%= @profile.username %> </h2>
            </div>
            <div class="col">
             <% if  user_signed_in? && current_user.profile? && current_user.profile.photo.attached? %>
              <%= cl_image_tag current_user.profile.photo.key, class: "avatar float-right" %>
             <% else %>
              <img src="https://icons.iconarchive.com/icons/custom-icon-design/flatastic-4/256/User-orange-icon.png" alt="placeholder" class='avatar'>
             <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col text-center">
              <i class="fas fa-user-edit medium-icon-icon"></i>
              <p>Me</p>
            </div>

            <div class="col text-center">
              <i class="fas fa-comment-alt medium-icon"></i>
              <p><%= link_to 'Messages', conversations_path %>(<%= @message.where(user: current_user, read: false).count %>)</p>
            </div>

            <div class="col text-center">
              <i class="fas fa-envelope medium-icon"></i>
              <p>Notifications</p>
            </div>
          </div>
        </div>

<!-- 2nd row = last transactions -->
        <div class="container text-white bg-secondary pt-3 mt-2 myradius" >
          <div class="row mb-5">
            <div class="col">
              <h3 class="text-center pb-3"><strong>My Bets</strong></h3>
              <ul class="ml-n4 mr-1">
                <% current_user.bets.each do |bet| %>
                  <li class="border border-light myradius bg-dark p-4 mb-3">
                    <p><%= bet.created_at.strftime('%c') %></p>
                    <% bet.numbers.each do |number| %>
                      <span class='number-circle'><%= number %></span>
                    <% end %>
                    <% bet.stars.each do |stars| %>
                      <span class='number-star'><%= stars %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

      </div>
      <!-- END left section -->

    </div>
    <!-- END initial row -->
  </section>
</main>




<%= render 'shared/footer' %>













